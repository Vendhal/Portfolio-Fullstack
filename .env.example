# Database connection used by Spring Boot and MySQL
DB_HOST=db
DB_PORT=3306
DB_NAME=portfolio
DB_USER=portfolio
DB_PASSWORD=secret
MYSQL_ROOT_PASSWORD=secret

# Ports exposed when using docker-compose.prod.yml
BACKEND_PORT=8080
FRONTEND_PORT=80

# Spring Boot profile
SPRING_PROFILES_ACTIVE=prod

# Optional: override the API URL baked into the frontend build
# VITE_API_BASE_URL=https://your-domain/api
