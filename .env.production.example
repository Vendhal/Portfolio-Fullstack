# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=portfolio
DB_USER=portfolio_user
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration (CRITICAL: Use strong secrets in production)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Application URLs
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
BACKEND_PORT=8080
VITE_API_BASE_URL=https://yourapp.com/api
CORS_ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Spring Profiles
SPRING_PROFILES_ACTIVE=production

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Deployment Configuration
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest
ENVIRONMENT=production